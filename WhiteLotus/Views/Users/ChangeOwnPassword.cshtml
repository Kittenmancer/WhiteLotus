@model MapleGroup.Web.ViewModels.UsersViewModel

<div class="row">
    <div class="col-md-8">
        <div class="card card-default">
            <h3 class="card-title">Change Your Password</h3>

            @using (Html.BeginForm("ChangeOwnPassword", "Users", FormMethod.Post, new {@name = "form1", id = "form1"})) {
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label for="user_Password">New Password</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        <span class="input-group-btn">
                            <button class="btn btn-default" style="background-color: #efefef" id="generatePassword" data-container="body" data-toggle="popover" data-placement="top" type="button">Generate</button>
                    </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.User.Password)
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm New Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmpassword" placeholder="Confirm Password"/>
                </div>

                <a class="btn btn-primary" id="saveButton">Save</a>
                <a class="btn btn-default" href="@Url.Action("Index", "Home")">Cancel</a>
            }
        </div>
    </div>
</div>


@section foot{
    <script>
        MapleGroup.Urls.zeroClipboardLocation = '@Url.Content("~/Scripts/vendor/ZeroClipboard.swf")';
    </script>
    <script src="~/Scripts/vendor/ZeroClipboard.js"></script>
    <script src="~/Scripts/app/users.js"></script>
}