@using WhiteLotus
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon.ico")">
    <title>White Lotus Yoga</title>
    <link href="~/Content/css/vendor/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/vendor/bootstrap-switch.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/vendor/jquery-ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/vendor/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/app/site.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/vendor/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/vendor/jquery-2.1.4.js"></script>
    <script src="~/Scripts/app/enhancement.js"></script>
    <script src="~/Scripts/vendor/bootstrap.min.js"></script>
    <script src="~/Scripts/vendor/slick.js"></script>
    <script src="~/Scripts/vendor/bootstrap-switch.min.js"></script>
    <script src="@Url.Content("~/Scripts/app/site.js")"></script>
    @RenderSection("head", false)
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("White Lotus Yoga", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>
                All material Copyright &copy; <strong>The Maple Group @DateTime.Now.Year</strong>
            </p>
        </footer>
    </div>
    @RenderSection("foot", required: false)
</body>
</html>
